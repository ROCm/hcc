#define FOV_TEMPLATE_1(A,B,TYPE,NAME,S) \
	FUNC (A##S##B, TYPE##S,NAME,(TYPE##S),1)
	
#define FOV_TEMPLATE_2(A,B,TYPE,NAME,S) \
	FUNC (A##S##B, TYPE##S,NAME,(TYPE##S, TYPE##S),2)
	
#define FOV_TEMPLATE_3(A,B,TYPE,NAME,S) \
	FUNC (A##S##B, TYPE##S,NAME,(TYPE##S, TYPE##S, TYPE##S),3)
	
	
#define FUNC_ONE_VEC(A,B,SMALL,TYPE,NAME) \
	FOV_TEMPLATE_1(A,B,TYPE,NAME,4) \
	FOV_TEMPLATE_1(A,B,TYPE,NAME,3) \
	FOV_TEMPLATE_1(A,B,TYPE,NAME,2) \
	FUNC(SMALL,TYPE,NAME,(TYPE),1)
	
#define FUNC_TWO_VEC(A,B,SMALL,TYPE,NAME) \
	FOV_TEMPLATE_2(A,B,TYPE,NAME,4) \
	FOV_TEMPLATE_2(A,B,TYPE,NAME,3) \
	FOV_TEMPLATE_2(A,B,TYPE,NAME,2) \
	FUNC(SMALL,TYPE,NAME,(TYPE,TYPE),2)
	
#define FUNC_THREE_VEC(A,B,SMALL,TYPE,NAME) \
	FOV_TEMPLATE_3(A,B,TYPE,NAME,4) \
	FOV_TEMPLATE_3(A,B,TYPE,NAME,3) \
	FOV_TEMPLATE_3(A,B,TYPE,NAME,2) \
	FUNC(SMALL,TYPE,NAME,(TYPE,TYPE,TYPE),3)
	
	
#define FUNC_ONE_VEC_DF(CORE,NAME) \
	FUNC_ONE_VEC(CORE##Dv,_f,CORE##f,float,NAME) \
	FUNC_ONE_VEC(CORE##Dv,_d,CORE##d,double,NAME)
	
#define FUNC_TWO_VEC_DF(CORE,NAME) \
	FUNC_TWO_VEC(CORE##Dv,_fS_,CORE##ff,float,NAME) \
	FUNC_TWO_VEC(CORE##Dv,_dS_,CORE##dd,double,NAME)
	
#define FUNC_THREE_VEC_DF(CORE,NAME) \
	FUNC_THREE_VEC(CORE##Dv,_fS_S_,CORE##fff,float,NAME) \
	FUNC_THREE_VEC(CORE##Dv,_dS_S_,CORE##ddd,double,NAME)
	
