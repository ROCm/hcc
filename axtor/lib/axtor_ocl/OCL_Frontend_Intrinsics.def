#define CONVERT_SIZED_2(A,B,C,DEST,D,E,SRC,WIDTH) \
	COMPLEX(A##WIDTH##B##WIDTH##C,DEST##WIDTH,D #WIDTH E,(SRC##WIDTH))
	
#define CONVERT_SIZED_3(A,B,C,DEST,D,E,F,SRC,WIDTH) \
	COMPLEX(A##WIDTH##B##WIDTH##C,DEST##WIDTH,D #WIDTH E #WIDTH F,(SRC##WIDTH))
	
#define CONVERT_SIZED_4(A,B,C,DEST,D,E,F,G,SRC,WIDTH) \
	COMPLEX(A##WIDTH##B##WIDTH##C,DEST##WIDTH,D #WIDTH E #WIDTH F #WIDTH G,(SRC##WIDTH))


